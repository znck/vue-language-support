{
  "name": "vue-language-support",
  "displayName": "Vue Language Support",
  "description": "Improving developer experience in .vue files",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:vue-html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/znck/vue-language-support"
  },
  "publisher": "znck",
  "icon": "logo.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "vue.globalComponents.source": {
          "description": "Global components directory",
          "type": "string",
          "default": "src/components"
        },
        "vue.globalComponents.recursive": {
          "description": "Search global components recursively",
          "type": "boolean",
          "default": false
        },
        "vue.globalComponents.filter": {
          "description": "Filter components",
          "type": "string",
          "default": "_?(app|base|App|Base)[^.]+\\.vue$"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@babel/types": "^7.4.0",
    "@types/babel__core": "^7.1.0",
    "@types/babel__traverse": "^7.0.6",
    "@types/fs-extra": "^5.0.5",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.12.21",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "vue": "^2.6.10"
  },
  "dependencies": {
    "@babel/core": "^7.4.0",
    "@babel/traverse": "^7.4.0",
    "@types/jest": "^24.0.6",
    "@vue/component-compiler-utils": "^2.6.0",
    "fs-extra": "^7.0.1",
    "jest": "^24.5.0",
    "lodash": "^4.17.11",
    "ts-jest": "^24.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true
  }
}
