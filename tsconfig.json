{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["es6"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true,
    "paths": {
      "@znck/vue-docgen": ["./packages/vue-docgen/src/index.ts"],
      "@znck/vue-language-server": ["./packages/vue-language-server/src/index.ts"],
    }
  },
  "include": ["packages", "extentions"],
  "exclude": ["node_modules", ".vscode-test", "old"]
}
